{
  "parser": "babel-eslint",

  "ecmaFeatures": {
    "jsx": true
  },

  "plugins": [
    "react"
  ],

  "rules": {
    "strict": 0,
    "no-underscore-dangle": 0,
    "no-unused-vars": 1,
    "curly": 0,
    "no-multi-spaces": 0,
    "key-spacing": 0,
    "no-return-assign": 0,
    "consistent-return": 0,
    "no-shadow": 0,
    "no-comma-dangle": 0,
    "no-use-before-define": [2, "nofunc"],
    "no-empty": 0,
    "no-trailing-spaces": 0,
    "new-parens": 0,
    "no-cond-assign": 0,
    "quotes": 0,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
  },

  "env": {
    "node": true,
    "browser": true,
    "mocha": true,
    "es6": true
  }
}
